<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/layout_margin"
    tools:context=".ui.main.MainActivity">
    <ImageView android:id="@+id/imageView2" android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@drawable/background_multimetro" android:scaleType="fitCenter" android:adjustViewBounds="true" app:srcCompat="@drawable/background_multimetro" />
    <LinearLayout
        android:id="@+id/ll.top"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll.main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/colorAccent">
            <TextView
                android:text="Vin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"/>
            <TextView
                android:text="100"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll.addition"
            android:layout_below="@+id/ll.main"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorPrimary"
            android:visibility="visible"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll.button.panel"
        android:layout_below="@+id/ll.top"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layoutButtonsTop"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Space android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />
            <ImageButton android:id="@+id/imageButtonOsc"
                style="@style/button_item"
                app:srcCompat="@drawable/button_osc" />
            <ImageButton
                android:id="@+id/imageButtonPause"
                style="@style/button_item"
                app:srcCompat="@drawable/button_pause" />
            <ImageButton
                android:id="@+id/imageButtonPlay"
                style="@style/button_item"
                app:srcCompat="@drawable/button_play" />
            <ImageButton
                android:id="@+id/imageButtonSettings"
                style="@style/button_item"
                app:srcCompat="@drawable/button_settings" />
            <Space
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layoutButtons_bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Space android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.1" />
            <ImageButton
                android:id="@+id/imageButtonSinc"
                style="@style/button_item"
                app:srcCompat="@drawable/button_connect" />
            <ImageButton
                android:id="@+id/imageButtonlista"
                style="@style/button_item"
                app:srcCompat="@drawable/button_lista" />

            <ImageButton
                android:id="@+id/imageButtonSave"
                style="@style/button_item"
                app:srcCompat="@drawable/button_save" />
            <ImageButton
                android:id="@+id/imageButtonWave"
                style="@style/button_item"
                app:srcCompat="@drawable/button_large" />
            <ImageButton
                android:id="@+id/imageButtonR"
                style="@style/button_item"
                app:srcCompat="@drawable/button_off" />
            <Space android:visibility="visible" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1.1" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="4.0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ll.button.panel">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <SeekBar
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:rotation="270" />
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="fill_parent">
            <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
                <ImageButton android:id="@+id/imageButtonGen" android:background="@color/transparent" android:layout_width="@dimen/main_button_size" android:layout_height="@dimen/main_button_size" android:layout_marginTop="10.0dip" android:src="@drawable/general_button_off" android:scaleType="fitStart" android:layout_weight="1.0" app:srcCompat="@drawable/general_button_off" />
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent">
                <LinearLayout android:orientation="horizontal" android:id="@+id/layoutLeftClick" android:clickable="true" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0" android:onClick="genBLeftClick" />
                <LinearLayout android:orientation="horizontal" android:id="@+id/layoutRightClick" android:clickable="true" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0" android:onClick="genBRightClick" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>